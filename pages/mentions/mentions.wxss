  background-color:#dfdfdf;
}
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.container-content{
  display: flex;
  flex-direction: row;
}
.head{
  width: 72rpx;
  height: 72rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.content {
  display: flex;
  flex-direction:column;
  margin-right: 5%;
  margin-top: 28rpx;
}
.name{
  margin-left: 20rpx;
  font-size: 35rpx;
  color:#888888;
}
.fan{
  width: 100rpx;
  height: 30rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
}
.mention{
  font-size: 35rpx;
  margin-left: 100rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.time{
  display: flex;
  flex-direction: row;
  margin-left: 80rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}
.timet{
  font-size: 25rpx;
  color: #A9A9A9;
  margin-left: 10rpx;
}
.timepic{
  width: 36rpx;
