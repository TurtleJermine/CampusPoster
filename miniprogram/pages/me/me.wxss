.userBg {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  background-color: #fff;
  align-items: center;
}

.user-item {
  width: 33%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 40rpx;
}

.num {
  font-size: 48rpx;
}

.text {
  font-size: 20rpx;
  color: #7f8389;
}

.userBg2 {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background-color: #fff;
  align-items: center;
}

.img {
  overflow: hidden;
  display: block;
  margin-left: 18rpx;
  margin-top: 25rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.uesr {
  width: 70%;
  color: #fff;
  margin-left: 20rpx;
  align-items: center;
}

.nick-name {
  margin-left: 18rpx;
  font-family: 'Mcrosoft Yahei';
  font-size: 36rpx;
}

.changeInfo {
  margin-left: 18rpx;
  margin-top: 18rpx;
  font-size: 26rpx;
  color: #aaa;
}

.content {
  background-color: #f4f4f4;
  height: 800rpx;
}

.line {
  height: 30rpx;
}

.item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  height: 80rpx;
  align-items: center;
}

.itemName {
  width: 40%;
  font-size: 35rpx;
}

.icon {
  width: 100rpx;
  text-align: center;
}

.right {
  width: 40%;
  text-align: right;
  color: #c7c7cc;
}

.right_ {
  width: 35%;
  text-align: right;
  color: #c7c7cc;
}

.hr {
  height: 1rpx;
  background-color: #ccc;
  opacity: 0.2;
}
