.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bg{
  width: 100%;
  height:380rpx;
  background-color: #0C4A76;
}

.head{
  display: flex;
  flex-direction: row;
  padding-top: 100rpx;
  width: 100%;
}

.post_thumb{
  width: 100rpx;
  height: 100rpx;
  margin-left: 70rpx;
  border-radius: 100rpx;
}

.info{
  margin-left: 32rpx;
  flex: 1;
  color: #fff;
}

.title{
  font-size: 40rpx;
}

.desc{
  margin-top: 10rpx;
  font-size: 24rpx;
}

.btn-unpressed{
  background-color: #09bb07;
  color: #fff;
  width: 140rpx;
  height: 60rpx;
  margin-right: 60rpx;
  margin-top: 20rpx;
}

.btn-pressed{
  background-color: #fff;
  color: #aaaaaa;
  width: 140rpx;
  height: 60rpx;
  margin-right: 60rpx;
  margin-top: 20rpx;
}

.btn_text{
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.top_postWrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -66rpx;
}

.top_post{
  font-size: 28rpx;
  background-color: #fff;
  width: 600rpx;
  border: 1px solid #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 2rpx #aaaaaa;
}

.first_top{
  height: 54rpx;
  padding-top: 16rpx;
  padding-bottom: 4rpx;
}

.top_label{
  margin-left: 40rpx;
  color: #2f94f1;
}

.top_title{
  margin-left: 48rpx;
}

.br{
  margin-left: 40rpx;
  width: 520rpx;
  height: 4rpx;
  background-color: #dddddd;
}

.tabs{
  margin-top: 30rpx;
  width: 250rpx;
}

.br2{
  width: 100%;
  height: 18rpx;
  background-color: #eeeeee;
}

.post_btn{
  position: fixed;
  bottom: 220rpx;
  right: 60rpx;
  width: 110rpx;
  height: 110rpx;
  color: #ffffff;
  background-color: #1f76bd;
  border-radius: 110rpx;
  z-index: 3;
  display:flex; 
  justify-content:center; 
  align-items:center;
  font-size: 100rpx;
  box-shadow: 0 4rpx 8rpx 4rpx #888888;
}