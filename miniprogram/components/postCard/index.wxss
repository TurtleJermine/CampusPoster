.container{
  padding: 0;
  margin-top: 14rpx;
}

.width{
  width: 94%;
  margin-left: 20rpx;
}

.inline{
  display: inline-block;
  flex: 1;
}

.head{
  display: flex;
  position: relative;
}

.thumb{
  width: 72rpx;
  height: 72rpx;
  border-radius: 72rpx;
}

.name{
  margin-left: 22rpx;
  margin-top: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.title{
  display: flex;
  position: relative;
  margin-top: 26rpx;
  font-size: 30rpx;
}

.content{
  display: flex;
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 28rpx;
  font-size: 30rpx;
}

.thumbs_single{
  width: 480rpx;
  height: 270rpx;
}

.thumbs_multi{
  width: 210rpx;
  height: 200rpx;
}

.space_left{
  margin-left: 10rpx;
}

.bottom_left{
  flex: 1;
}

.bottom_between{
  margin-left: 50rpx;
}

.bottom_icon{
  width: 28rpx;
  height: 28rpx;
}

.desc{
  margin-left: 14rpx;
  font-size: 24rpx;
}

.flex_items{
  display: flex;
  flex-direction: row;
}

.bottom{
  margin-bottom: 24rpx;
}