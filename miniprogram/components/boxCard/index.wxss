.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  border: 1rpx solid #dddddd;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 0;
}

.bg{
  width: 150rpx;
  height: 80rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #2782cc;
}

.thumb{
  margin-top: -45rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.title{
  margin-top: 14rpx;
  font-size: 26rpx;
}

.desc{
  margin-top: 14rpx;
  margin-bottom: 24rpx;
  font-size: 18rpx;
  color: #b2b2b2;
}